<form class="login-form">
  <div>
    <label for="email-login"></label>
    <input
      class="elogin"
      type="text"
      id="email-login"
      placeholder="Enter Your Email"
    />
  </div>
  <div>
    <label for="password-login"></label>
    <input
      class="elogin"
      type="password"
      id="password-login"
      placeholder="Enter Your Password"
    />
  </div>
  <div>
    <button id="login-btn" type="submit">SIGN IN</button>
  </div>
</form><br /><br /><br />

<form class="signup-form">
  <div>
    <label for="username-signup"></label>
    <input type="text" id="username-signup" placeholder="Create Username" />
  </div>
  <div>
    <label for="email-signup"></label>
    <input type="text" id="email-signup" placeholder="Enter Your Email" />
  </div>
  <div>
    <label for="password-signup"></label>
    <input
      type="password"
      id="password-signup"
      placeholder="Enter Your Password"
    />
  </div>
  <div>
    <button id="signup-btn" type="submit">SIGN UP</button>
  </div>
</form>

<script src="/javascript/login.js"></script>